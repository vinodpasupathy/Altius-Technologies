                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <%= i.text_field :name,:placeholder=>"Name",:required=>"true"%>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <%= i.text_field :email,:placeholder=>"Email address",:required=>"true"%>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <%= i.text_area :message, :placeholder=>"Message",:required=>"true"%>
                                    </div>
                                    <div class="form-group">
                                        <%= i.submit "Submit Query"%>
                                    </div>
                                </div>
                            </div>
                            <%end%>
                        </form>
